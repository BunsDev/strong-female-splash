---
import "../styles/index.css";
import Layout from "../layouts/Layout.astro";
import HeroIllustration from "../assets/HeroIllustration.astro";
import { SubscribeForm } from "../components/SubscribeForm";
---

<Layout title="Welcome to Astro.">
  <main class="flex h-full px-4 mx-auto">
    <section class="grid sm:grid-cols-2 mx-auto">
      <div class="flex flex-col items-center justify-center text-center">
        <h1 class="text-8xl font-bold text-white">
          Product of a <span class="gradient-text">strong female</span>
        </h1>
        <p class="text-white text-xl mt-8">
          A brand inspired by the people we are, and women who raised us.
        </p>
        <SubscribeForm />
      </div>
      <div id="hero-illustration" class="flex">
        <HeroIllustration />
      </div>
    </section>
  </main>
</Layout>
